{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@modules/*": ["ts/*"],
      "@styles/*": ["css/*"]
    }
  },
  "include": ["src/**/*", "src/global.d.ts"]
}
